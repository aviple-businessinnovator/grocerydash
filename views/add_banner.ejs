<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <%- include('partials/head') %> 
</head>
<body>
    <div id="wrapper">
        <%- include('partials/nav') %> 
        <%- include('partials/virnav') %> 
  
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="col-lg-3 col-md-3 col-lg-6">
                    <h2 class="p-3 h2">Add Banner</h2> 
                </div>
                <div class="col-lg-12">
                    <div class="row" style="margin: auto;">
                        <div class="col-sm-4 col-md-4" style="margin:0 auto;padding: 0.3rem;">
                        <form>
                           
                                <div class="form-group" >
                                    <label for="categories" class=" form-control-label">title</label>
                                    <input type="text" name="title" placeholder="Enter Banner title" class="form-control">
                                </div>
                                <div class="form-group" >
                                    <label for="categories" class=" form-control-label">Featured image</label>
                                    <input type="text" name="image" placeholder="paste image url" class="form-control">
                                </div>
                                <div class="form-group" >
                                    <label for="categories" class=" form-control-label">Redirecting URL</label>
                                    <input type="text" name="redirect" placeholder="paste category url" class="form-control">
                                </div>
                                <div class="form-group" >
                                    <label for="des" class=" form-control-label">Description</label>
                                    <textarea name="description" id="des" cols="30" rows="10" class="form-control"></textarea>
                                </div>
                                <div class="form-group" >
                                     <button  name="submit" type="submit" style="margin: auto;" class="btn btn-primary ">
                                    Submit
                                </button>
                                </div>
                            </div>
                         
                            
                          
                        </form>
                    </div>
                    </div>
                </div></div>
        <%- include('partials/footer') %>
    </div>
    <script>
        const form =document.querySelector("form");
        form.addEventListener("submit",(e)=>{
            e.preventDefault();
            const title=form.title.value;
            const image=form.image.value;
            const redirect=form.redirect.value;
            const description=document.getElementById("des").value;
       
            
            try{
                  const data=   fetch("/add_banner",
                     {method:'POST',
                     body:JSON.stringify({title,image,redirect,description}),
                     headers:{'Content-Type':'application/json'}
                    }).then((result)=>{return result.json();}).then((result)=>{alert(result.msg)})
            }
            catch(Err){
                console.log(Err);
            }
        });
    </script>
</body>
</html>