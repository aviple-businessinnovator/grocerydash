<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <%- include('partials/head') %> 
</head>
<body>
    <div id="wrapper">
        <%- include('partials/nav') %> 
        <%- include('partials/virnav') %> 
  
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="col-lg-3 col-md-3 col-lg-6">
                    <h2 class="p-3 h2">All Banner</h2> 
                </div>
                <div class="col-lg-12">
                    <div class="card">
                       <div class="card-body--">
                          <div class="table-reponsive table-stats order-table ov-h " style="overflow:auto;">
                             <table class="table  table-bordered table-hover">
                                <thead>
                                   <tr>
                                      
                                      <th>ID</th>
                                      <th>Banner image</th>
                                      <th>Banner Title</th>
                                      <th>Banner Description</th>
                                      <th>Actions</th>
                                      
                                   </tr>
                                </thead>
                                <tbody>
                                    
                                    <% for (let index = 0; index < banner.length; index++) { %>
                                        <tr>
                                        <th><%=   index %> </th>
                                        <th> <img src="<%=   banner[index].image %>" height="100" alt=""> </th>
                                      <th><%=   banner[index].title %> </th>
                                      <th><%=   banner[index].description %> </th>
                                     
                                      <th>
                                          <button class="btn" id="<%= banner[index]._id %>" onclick="updateProduct(this)"> <i class="fa fa-edit"></i></button>
                                          <button class="btn"  id="<%= banner[index]._id %>" onclick="deleteProduct(this)"> <i class="fa fa-trash"></i></button>
                                        </th>
                                    </tr>
                                        <%
                                    
                                        
                                    } %> 
                                    </tbody>
                                    </table>
                                    </div>
                                    </div>
                                    </div>
                                    </div>
                                    </div>
        <%- include('partials/footer') %>
    </div>
    <script>
        function deleteProduct(product){
            location.replace('/banner/delete/'+product.id);
        }
        function updateProduct(product){
            location.replace('/banner/update/'+product.id);
        }
    </script>
</body>
</html>